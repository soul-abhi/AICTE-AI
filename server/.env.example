# MongoDB Connection (Replace with your MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_very_long_random_secret_key_at_least_32_characters
JWT_EXPIRES_IN=7d

# Client Origin (Update for production)
CLIENT_ORIGIN=http://localhost:5173

# Hugging Face API
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models/mistralai/Mistral-7B-Instruct-v0.2
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# OpenAI API (Optional)
OPENAI_API_KEY=sk_your_openai_api_key_here_optional

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development
